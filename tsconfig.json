{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "test/*": ["test/*"],
            "~/*": ["src/*"]
        },
        "types": ["node"]
    },
    "include": ["src", "test"],
    "exclude": ["node_modules", "build.js", "dist"]
}
